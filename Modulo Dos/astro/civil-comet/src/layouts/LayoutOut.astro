---
interface Props {
	title: string;
	page: boolean;
}

const { title, page } = Astro.props;


---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class=' mt-10 sm:mx-auto sm:w-full sm:max-w-sm'>
			<div class="flex items-end">
				<a href="inicio-sesion" class:list={["flex justify-center items-center w-1/3 h-10 bg-green-300 rounded-t-xl box h-10 ", { "z-10 h-12 text-xl": !page}]} >  
					<h2 class="text-white text-bold">Iniciar sesion</h2> 
				</a>
				<a href="registro" class:list={["flex justify-center items-center w-1/3 h-10 bg-red-300 rounded-t-xl -ml-4",{"z-10 h-12 text-2xl": page}]}  >
					<h2 class="text-white text-bold">Registrarse</h2>   
				</a>
			</div>
			<slot/>
        </div>
		
	</body>
</html>
